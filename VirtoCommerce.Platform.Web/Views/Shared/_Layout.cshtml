@using VirtoCommerce.Platform.Web
<!DOCTYPE html>
<html lang="en" ng-app="platformWebApp" ng-strict-di>
<head>
    <meta charset="utf-8" />
    <title>Virto Commerce @ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"> 
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
  
    @Styles.Render(Startup.VirtualRoot + "/css/core")
    @Styles.Render(Startup.VirtualRoot + "/css/modules")
    @*<script src="//cdnjs.cloudflare.com/ajax/libs/es5-shim/3.4.0/es5-shim.min.js"></script>*@

    <base href="~/" />
</head>
<body ng-class="{'lang-rtl': isRTL}" ng-controller="platformWebApp.appCtrl" ng-init="platformVersion ='@(Model.PlatformVersion)'; demoCredentials = @(Model.DemoCredentials); demoResetTime = @(Model.DemoResetTime); license = initExpiration(@Html.Encode(Model.License))">
    @RenderBody()

    @Scripts.Render(Startup.VirtualRoot + "/scripts/angular")
    @Scripts.Render(Startup.VirtualRoot + "/scripts/modules")
    @RenderSection("scripts", required: false)
</body>
</html>
